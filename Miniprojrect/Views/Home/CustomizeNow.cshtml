<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<link href="~/Styles/StyleSheet1.css" rel="stylesheet" />

<br />
<br />
<div class="container">
    <div class="pizzabox" style="height:450px;">
        <div class="col-md-12">
            @*<div class="row">*@
            <div class="col-sm-3 col-md-6">
                <h3 align="center"><b>Farm House</b></h3>
                <img src="~/Image/Farm_House.jpg" style="height:400px" />
                <br />
                <div href="#" class="thumbnail">
                    <div class="input-group">
                        <div class="col-md-4 col-md-offset-0">

                            <input type="radio" name="j" value="250" onclick="calculate(this)" />
                            <label for='regular' class="inlinelabel">Small</label>(RM2)
                            </p>
                            <p>
                                <input type="radio" name="j" value="350" onclick="calculate(this)" />
                                <label for='regular' class="inlinelabel">Regular</label>(RM3)
                            </p>
                            <p>
                                <input type="radio" name="j" value="450" onclick="calculate(this)" />
                                <label for='regular' class="inlinelabel">Large</label>(RM4)
                            </p>
                        </div>
                        <div class="col-md-2 col-md-offset-0">
                            <label>Quantity:</label>
                            @*<div class="input-group-btn">
                                    <button class="btn btn-info" onclick="down('0')" id="down">
                                        <span class="glyphicon glyphicon-minus"></span>
                                    </button>
                                </div>*@
                            <div class="input-group-btn"><input type="text" id="myNumber" class="form-control input-number" value="1" style="width:50px" oninput="calc()" @*onkeyup="this.onchange();"*@ /></div>
                            @*<div class="input-group-btn">
                                    <button class="btn btn-info" onclick="up('10')" id="up">
                                        <span class="glyphicon glyphicon-plus"></span>
                                    </button>
                                </div>*@
                        </div>&nbsp;
                        @*<label><b>Price:</b></label>*@  &nbsp;
                        <div class="col-md-2 col-md-offset-2"><b>Price:</b><output type="text" class="form-control" style="width:120px" id="priceText" /></div><br />
                        @*<div><b>total Price:</b><input type="text" id="total" value="1" style="width:50px"/></div>*@<br /><br /><br />

                        <div class="col-md-2 col-md-offset-0"><button class="btn btn-success" onclick="window.location=('@Url.Action("ReviewOrder", "Home")')">Buy Now</button></div>
                    </div>
                </div>
            </div>
            <div class="col-sm-5 " role="tablist">

                <table>
                    <tr><b align="center">Extra Toppings</b> </tr>
                    <tr>
                        <ul class="nav nav-tabs nav-justified" role="tablist">
                            <li class="active"><a href="#Veg" role="tab" data-toggle="tab">Veg Toppings</a></li>
                            <li><a href="#non-veg" role="tab" data-toggle="tab">Non-Veg Toppings</a></li>
                            <li><a href="#cheese" role="tab" data-toggle="tab">Extra Cheese</a></li>
                        </ul>
                        <div class="panel panel-primary">
                            <div class="tab-content">
                                <div class="tab-pane active" id="Veg" style="height:500px">
                                    <div class="col-md-5">


                                        <b>Capsicum:</b>
                                        <a href="#" class="thumbnail" onclick="ToppingsPrice()">
                                            <img src="~/Image/toppingsCapsicum.jpg" />
                                     
                                        </a>
                                        <b>Golden Corn:</b>
                                        <a href="#" class="thumbnail" onclick="ToppingsPrice()">
                                            <img src="~/Image/toppingsGoldenCorn.jpg" />
                                        </a>
                                    </div>
                                    <div class="col-md-5">
                                        <b>Jalapeno:</b>
                                        <a href="#" class="thumbnail" onclick="ToppingsPrice()">
                                            <img src="~/Image/toppingsJalapeno.jpg" />    
                                        </a>
                                        <b>Mushroom:</b>
                                        <a href="#" class="thumbnail" onclick="ToppingsPrice()">
                                            <img src="~/Image/toppingsMushroom.jpg" />
                                        </a>
                                    </div>
                                    <div class="col-md-5">
                                        <b>Olives:</b>
                                        <a href="#" class="thumbnail" onclick="ToppingsPrice()">
                                            <img src="~/Image/toppingsOlives.jpg" />
                                        </a>
                                       
                                        <b>Onion:</b>
                                        <a href="#" class="thumbnail" onclick="ToppingsPrice()">
                                            <img src="~/Image/toppingsOnion.jpg" />
                                        </a>
                                    </div>
                                    <div class="col-md-5">
                                        <b>Panner:</b>
                                        <a href="#" class="thumbnail" onclick="ToppingsPrice()">
                                            <img src="~/Image/toppingsPaneer.jpg" />
                                        </a>
                                        <b>Paparika</b>
                                        <a href="#" class="thumbnail" onclick="ToppingsPrice()">
                                            <img src="~/Image/toppingsPaparika.jpg" />
                                        </a>
                                    </div>

                                    <div class="col-md-5">
                                        <b>Tomato</b>
                                        <a href="#" class="thumbnail" onclick="ToppingsPrice()">
                                            <img src="~/Image/toppingsTomato.jpg" />
                                        </a>
                                    </div>

                                </div>
                                <div class="tab-pane" id="non-veg" style="height:300px">

                                    <div class="col-md-5">
                                        &nbsp;&nbsp;
                                        <b>Barbeque:</b>
                                        <a href="#" class="thumbnail" onclick="ToppingsPrice()">
                                            <img src="~/Image/toppingsBarbeque.jpg" />
                                        </a>
                                        <b>ChickenSausage:</b>
                                        <a href="#" class="thumbnail" onclick="ToppingsPrice()">
                                            <img src="~/Image/toppingsChickenSausage.jpg" />
                                        </a>
                                    </div>
                                    <div class="col-md-5">
                                        &nbsp;&nbsp;
                                        <b>ChickenTikka:</b>
                                        <a href="#" class="thumbnail" onclick="ToppingsPrice()">
                                            <img src="~/Image/toppingsChickenTikka.jpg" />
                                        </a>
                                        <b>GrilledChickenRasher:</b>
                                        <a href="#" class="thumbnail" onclick="ToppingsPrice()">
                                            <img src="~/Image/toppingsGrilledChickenRasher.jpg" />
                                        </a>
                                    </div>
                                    <div class="col-md-5">
                                        <b>Peri Per Chicken:</b>
                                        <a href="#" class="thumbnail" onclick="ToppingsPrice()">
                                            <img src="~/Image/toppingsPeriPeriChicken.jpg" />
                                        </a>
                                    </div>
                                </div>
                                <div class="tab-pane" id="cheese" style="height:100px">
                                    <br /><br />
                                    &nbsp;&nbsp; <input type="checkbox" onclick="ToppingsPrice()" />Cheese
                                </div>
                            </div>
                        </div>
                    </tr>
                </table>
            </div>
        </div>
    </div>
</div>
