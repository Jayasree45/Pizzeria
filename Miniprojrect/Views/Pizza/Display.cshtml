@using Miniprojrect.Models;
    @{
        ViewBag.Title = "Display";
    }
    @{
    Training_12DecMumbaiEntities3 db = new Training_12DecMumbaiEntities3();
    }
    


    <div>

        <table border="1">
            <thead>
                <tr>
                    <th>Pizza ID</th>
                    <th>Pizza Name</th>
                    <th>Image</th>
                    <th>Category</th>
                    <th>Price</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in db.ProjectPizzas)
                {
                    <tr>

                        <td>@item.PizzaID</td>
                        <td>@item.PName</td>
                        <td><img src="~/Image/@item.ImageURL" width="100" height="100" /></td>
                        <td>@item.Category</td>
                        <td>@item.Price</td>
                    </tr>

                }
            </tbody>
        </table>
    </div>
